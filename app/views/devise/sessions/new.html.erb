<div class="card shadow border-0" style="margin-bottom: 3rem; padding: 3rem">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="card-body">
        <h2 class="card-title">Connexion</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :tgi, "TGI" %><br />
          <%= f.text_field :tgi, autofocus: true, autocomplete: "TGI", placeholder: "T0184152" %>
        </div>

        <div class="field">
          <%= f.label :password, "Mot de passe" %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mot de passe" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Se souvenir de moi" %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Connexion" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>